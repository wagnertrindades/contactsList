<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <i class="privacy icon"></i>
      <div class="content">
        Esqueceu sua senha?
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui large form" }) do |f| %>
      <div class="ui stacked segment"> 
        <%= devise_error_messages! %>

        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, placeholder: "E-mail", autofocus: true %>
          </div>
        </div>


        <%= f.submit "Recuperar senha", class: "ui fluid large teal submit button" %>

      </div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>