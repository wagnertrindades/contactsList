<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <i class="bordered inverted teal users icon"></i>
      <div class="content">
        Bem-vindo a Lista de Contatos
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <div class="ui stacked segment"> 
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, placeholder: "E-mail", autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "Senha", autocomplete: "off" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="ui segment">
            <div class="field">
              <div class="ui toggle checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label "Lembrar-se" %>
              </div>
            </div>
          </div>
        <% end -%>

        <%= f.submit "Entrar", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>
    
    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

