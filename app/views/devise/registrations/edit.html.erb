<%= render 'layouts/menu', page: "Editar contato" %>

<div class="ui container form">
    <h1 class="ui dividing header">
      Editar conta
      <%= link_to contact_lists_path, class: "icon-title", title: "Voltar para lista de contatos" do %>
        <i class="users icon teal"></i>
      <% end -%>
    </h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form" }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, autofocus: true %>  
    </div>

    <div class="field">
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "Nova Senha" %> <i>(caso não queira alterar senha atual, deixe em branco)</i>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confimação de nova senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "Senha atual" %> <i>(é necessário a senha atual para fazer qualquer alteração)</i>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <%= f.submit "Atualizar", class: "ui button blue" %>
  <% end %>

  <h3>Cancelar conta</h3>

  <p>Deseja cancelar sua conta? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja cancelar sua conta?" }, method: :delete, class: "ui button red" %></p>

</div>