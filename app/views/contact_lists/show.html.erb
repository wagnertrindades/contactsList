<%= render 'layouts/menu', page: "Novo contato" %>

<div class="ui container form">
  <h1 class="ui dividing header">
    Adicionar novo contato
    <%= link_to contact_lists_path, class: "icon-title", title: "Voltar para lista de contatos" do %>
      <i class="users icon teal"></i>
    <% end -%>
  </h1>
  
  <div class="ui relaxed divided list">
    <div class="item">
      <i class="large user middle aligned icon"></i>
      <div class="content">
        <div class="header blue contact-name"><%= @contact_list.name %></div>
        <div class="description contact-email"><%= @contact_list.email %></div>
      </div>
    </div>
  </div>

  <% if @custom_fields %>
    <% @custom_fields.each do |custom_field| %>
      <%= render partial: 'field/form', locals: { type_field: custom_field.status, label: custom_field.title } %>
    <% end -%>
  <% end -%>

</div>