<h1>Editar campo personalizado</h1>

<%= form_for @custom_field, url: custom_field_path, html: { method: :put } do |f| %>
  <% if @custom_field.errors.any? %>
    <div id="error_explanation">
      <ul class="forms-errors">
      <% @custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end -%>