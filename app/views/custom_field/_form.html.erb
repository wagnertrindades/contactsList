
<% if @custom_field.errors.any? %>
  <div id="error_explanation">
    <ul class="forms-errors">
    <% @custom_field.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :status %><br>
  <%= f.text_area :status %>
</div>

<div class="actions">
  <%= f.submit 'Criar' %>
</div>
